# ================================
# Security
# ================================

# CSRF Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
CSRF_SECRET=generate-strong-random-string-here-min-32-chars

# ================================
# SEO & META Configuration
# ================================

# Основной URL вашего сайта (обязательно для SEO)
# В production замените на реальный домен
NEXT_PUBLIC_SITE_URL=https://elegance-beauty.de

# ================================
# Google Services
# ================================

# Google Analytics Measurement ID (опционально)
# Получите на: https://analytics.google.com/
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Site Verification (для Google Search Console)
# Получите на: https://search.google.com/search-console
GOOGLE_SITE_VERIFICATION=your_verification_code_here

# ================================
# Database (Supabase)
# ================================

NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ================================
# Payment Providers
# ================================

# PayPal
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Stripe (если используется)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ================================
# Email Service
# ================================

SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@elegance-beauty.de

# ================================
# Social Media (для мета-тегов)
# ================================

NEXT_PUBLIC_INSTAGRAM_URL=https://www.instagram.com/elegance_beauty
NEXT_PUBLIC_FACEBOOK_URL=https://www.facebook.com/elegancebeauty
NEXT_PUBLIC_TWITTER_HANDLE=@elegancebeauty

# ================================
# Sentry (Error Tracking)
# ================================

SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ================================
# Development Settings
# ================================

NODE_ENV=development
